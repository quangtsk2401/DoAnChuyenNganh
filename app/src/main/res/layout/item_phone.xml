<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/itemphone_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3"
            android:src="@drawable/ic_baseline_wallpaper_24" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemphone_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/itemphone_idps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/itemphone_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá sp"
                android:textColor="#DC06983B"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/itemphone_mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>